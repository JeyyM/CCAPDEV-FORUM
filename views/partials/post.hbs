<div class="post" id={{post._id}}>
    {{#if showCommunity}}
    <div class="fromCommunity">
        <div class="communityRedirect" onclick="window.location.href='/viewCommunity/{{post.forum.name}}'">
            <img src="{{post.forum.forumImage}}" class="communityPic">
            <div class="communityHeader">
                <span class="communityName" data-community="{{toString post.forumId}}"></span>
            </div>
        </div>
    </div>
    {{/if}}
    <div class="postHeaderContainer">
        <div class="postHeader" onclick="window.location.href='/viewProfile/{{post.author.username}}'">
            <img src="{{post.author.profileImage}}" class="profilePic">
            <div>
                <span class="posterName" id="{{post.authorId}}"></span>
                <span class="timePosted">{{formatDate post.createdAt}}
                 {{#unless (isDateEqual post.updatedAt post.createdAt)}}
                    <span class="dot">â€¢</span>
                    <span class="timePosted">[EDITED]</span>
                 {{/unless}}
                 </span>
            </div>
        </div>
        
        {{#if (isEqual (toString post.authorId) (toString user._id))}}
            <div class="postSettings">
                <i class='bx bx-dots-horizontal-rounded' onclick="postSettings(event, this)"></i>
                <div class="floatingSettings hidden">
                    <button class="editPost" onclick="window.location.href='/editPost/{{post._id}}'"><i class='bx bx-edit-alt'></i>Edit</button>
                    <button class="deletePost"><i class='bx bx-trash'></i>Delete</button>
                </div>
            </div>
        {{/if}}
    </div>
    <div class="postContent" onclick="window.location.href='/viewPost/{{post._id}}'">
        <span class="postTitle">{{post.title}}</span>
        <span class="postBody">{{post.content}}</span>
        {{#if post.postImage}}
            <img src="{{post.postImage}}" class="postImage">
        {{/if}}
    </div>
    <div class="postEngagement">
        <button class="likeButton"><i class='bx bx-like'></i></button>
        <span class="voteValue">{{post.voteValue}}</span>
        <button class="dislikeButton"><i class='bx bx-dislike'></i></button>
        <button class="commentButton" onclick="window.location.href='/viewPost/{{post._id}}'"><i class='bx bxs-comment'></i><span>{{post.commentsCount}}</span></button>
        <button class="share"><i class='bx bxs-share-alt'></i></button>
    </div>
</div>