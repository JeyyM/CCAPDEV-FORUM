<div class="comment {{comment.authorId}} {{user._id}}" id="{{toString comment._id}}">
    <div class="commentHeaderContainer">
        <div class="commentHeader" onclick="window.location.href='/viewProfile/'">
            <img src="{{comment.profilePic}}" class="profilePic">
            <div>
                <span class="posterName" id="{{comment.authorId}}"></span>
                <span class="dot">•</span>
                <span class="timePosted">{{formatDate comment.createdAt}}</span>
                {{#unless (isDateEqual comment.updatedAt comment.createdAt)}}
                    <span class="dot">•</span>
                    <span class="timePosted">[EDITED]</span>
                {{/unless}}
            </div>
        </div>
        {{#if (isEqual (toString comment.authorId) (toString user._id))}}
            <div class="postSettings">
                <i class='bx bx-dots-horizontal-rounded' onclick="postSettings(event, this)"></i>
                <div class="floatingSettings hidden">
                    <button class="editComment" onclick="editComment(this)"><i class='bx bx-edit-alt'></i>Edit</button>
                    <button class="deleteComment"><i class='bx bx-trash'></i>Delete</button>
                </div>
            </div>
        {{/if}}
    </div>
    <div class="commentContent">{{comment.content}}</div>
    <div class="commentEngagement">
        <button class="likeButton"><i class='bx bx-like'></i></button>
        <span class="voteValue">{{comment.voteValue}}</span>
        <button class="dislikeButton"><i class='bx bx-dislike'></i></button>
        {{#unless (isNull user._id)}}
        <button class="commentButton" onclick="newComment(this, '{{user._id}}')"><i class='bx bx-comment'></i><span>{{comment.commentCount}}</span></button>
        {{else}}
        <button class="commentButton" onclick="newComment(this, null)"><i class='bx bx-comment'></i><span>{{comment.commentCount}}</span></button>
        {{/unless}}
        <button class="share"><i class='bx bxs-share-alt'></i></button>
    </div>
</div>