<div class="comment">
    <div class="commentHeaderContainer">
        <div class="commentHeader" onclick="window.location.href='/viewProfile/{{comment.posterName}}'">
            <img src="{{comment.profilePic}}" class="profilePic">
            <div>
                <span class="posterName" id="{{comment.authorId}}">{{comment.posterName}}</span>
                <span class="dot">â€¢</span>
                <span class="timePosted">{{comment.updatedAt}}</span>
            </div>
        </div>
        {{#if (isEqual (toString comment.authorId) user._id)}}
            <div class="postSettings">
                <i class='bx bx-dots-horizontal-rounded' onclick="postSettings(event, this)"></i>
                <div class="floatingSettings hidden">
                    <button class="editComment" onclick="editComment(this)"><i class='bx bx-edit-alt'></i>Edit</button>
                    <button class="deleteComment"><i class='bx bx-trash'></i>Delete</button>
                </div>
            </div>
        {{/if}}
    </div>
    <div class="commentContent">{{comment.content}}</div>
    <div class="commentEngagement">
        <button class="likeButton" onclick="likePost(this)"><i class='bx bx-like'></i><span>{{comment.likes}}</span></button>
        <button class="dislikeButton" onclick="dislikePost(this)"><i class='bx bx-dislike'></i><span>{{comment.dislikes}}</span></button>
        <button class="commentButton" onclick="addComment(this)"><i class='bx bx-comment'></i><span>{{comment.commentCount}}</span></button>
        <button class="share"><i class='bx bx-share-alt'></i></button>
    </div>
</div>