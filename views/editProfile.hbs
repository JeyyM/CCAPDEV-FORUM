<div class="main">
    <div class="textEditorBody">
        <div class="editorTitle"><i class='bx bx-edit'></i>Edit Profile</div>
        <div class="bannerContainer">
            <img src="{{profile.bannerImage}}" class="banner">
        </div>
        <div class="floatingContainer">
            <div class="profilePicContainer">
                <img src="{{profile.profileImage}}" class="profilePicture">
                <i class='bx bx-image-add'></i>
            </div>
            <i class='bx bx-image-add'></i>
        </div>
        <div class="inputContainer">
            <span>Change Username</span>
            <input id="usernameInput" placeholder="New Username" value="{{profile.username}}">
            
            <span>Edit Biography</span>
            <textarea id="biographyBody" placeholder="Biography" rows="10">{{profile.bio}}</textarea>
            <div class="buttonHolder">
                <button class="cancelPost" onclick="window.history.back()">Cancel</button>
                <button class="confirmPost" id="editProfile">Edit</button>
            </div>
        </div>
    </div>
</div>