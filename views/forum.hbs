<body>
    <div class="main">
        <div class="bodyContainer">
            {{> forumInfo}}

            <div class="sortContainer">
                <div id="sort">
                    <div id="mainsort" onclick="sortClicked()">
                        <span id="current"><i class='bx bxs-hot'></i>Hot<i class='bx bx-chevron-down'></i></span>
                    </div>
                    <div class="choices hidden" onclick="sortSelected(this)"><i class='bx bxs-hot'></i>Hot</div>
                    <div class="choices hidden" onclick="sortSelected(this)"><i class='bx bx-up-arrow-alt'></i>Top</div>
                    <div class="choices hidden" onclick="sortSelected(this)"><i class='bx bxs-time'></i>New</div>
                </div>
                <div id="viewOptions">
                    <div id="mainView" onclick="viewClicked()">
                        <span id="currentView"><i class='bx bxs-grid'></i>All<i class='bx bx-chevron-down'></i></span>
                    </div>
                    <div class="choices hidden" onclick="viewSelected(this)"><i class='bx bxs-grid'></i>All</span></div>
                    <div class="choices hidden" onclick="viewSelected(this)"><i class='bx bx-note'></i>Posts</div>
                    <div class="choices hidden" onclick="viewSelected(this)"><i class='bx bxs-comment'></i>Comments</div>
                </div>
            </div>

            <div id="postContainer">
                {{#each postData}}
                    <div class="post" data-post-id="{{_id}}">
                        <div class="postHeaderContainer">
                            <div class="postHeader" onclick="viewProfile('{{authorId}}')">
                                <img src={{lookup (lookup ../userData @index) "profileImage"}} class="profilePic">
                                <div>
                                    <span class="posterName">{{lookup (lookup ../userData @index) "username"}}</span>
                                    <span class="timePosted">{{createdAt}}</span>
                                </div>
                            </div>
                        </div>
                        <div class="postContent" onclick="viewPost('{{_id}}')">
                            <span class="postTitle">{{title}}</span>
                            <span class="postBody">{{content}}</span>
                        </div>
                        <div class="postEngagement">
                            <button class="likeButton" onclick="likePost('{{_id}}')"><i class='bx bx-like'></i><span>{{voteValue}}</span></button>
                            <button class="dislikeButton" onclick="dislikePost('{{_id}}')"><i class='bx bx-dislike'></i><span>{{dislikes}}</span></button>
                            <button class="commentButton" onclick="viewPost('{{_id}}')"><i class='bx bxs-comment'></i><span>{{commentsCount}}</span></button>
                            <button class="share"><i class='bx bxs-share-alt'></i></button>
                        </div>
                    </div>
                {{/each}}

            </div>
        </div>
    </div>
    <script>
    </script>
</body>